<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="25dp"
        android:id="@+id/reg"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="3%"
        android:layout_centerHorizontal="true"
        />




    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:id="@+id/name"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="4%"
        app:layout_marginLeftPercent="3%"
        android:layout_below="@+id/reg"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:id="@+id/name1"
        app:layout_widthPercent="50%"
        android:textSize="18dp"
        android:hint="Name"
        android:gravity="center"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="3%"
        android:layout_below="@+id/reg"
        />




       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/dob"
           android:text="Dob:"
           android:textSize="20dp"
           android:layout_below="@+id/name"
           app:layout_widthPercent="30%"
           app:layout_marginTopPercent="6%"
           app:layout_marginLeftPercent="3%"
           />

         <ImageButton
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_below="@+id/name1"
             android:layout_toRightOf="@+id/dob"
              android:id="@+id/date"
             app:layout_widthPercent="12%"
             app:layout_heightPercent="7%"
             app:layout_marginTopPercent="3%"
             app:layout_marginLeftPercent="3%"
             android:background="@drawable/calendar"
             />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date"
        android:id="@+id/dob1"
        android:layout_below="@+id/name1"
        app:layout_widthPercent="35%"
        android:textSize="18dp"
        android:textColor="#000000"
        android:hint="Dob"
        android:enabled="false"
        android:gravity="center"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="3%"

    />



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:text="Gender:"
        android:textSize="20dp"
        android:layout_below="@+id/dob"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="7%"
        app:layout_marginLeftPercent="3%"
        />




    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="3%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/date"
        android:layout_toRightOf="@+id/gender"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radiobackground"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:padding="5dp"
            android:clickable="true"
             />

        <RadioButton
            android:id="@+id/radioiPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/femalbackground"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:checked="false"
            android:clickable="true"
            />
    </RadioGroup>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="Address:"
        android:textSize="20dp"
        android:layout_below="@+id/gender"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="3%"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/address"
        android:layout_below="@+id/radioGroup1"
        android:id="@+id/address1"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        android:textSize="18dp"
        android:hint="address"
        android:maxLength="200"
        android:gravity="center"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="3%"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:text="City:"
        android:textSize="20dp"
        android:layout_below="@+id/address"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="3%"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/city"
        android:layout_below="@+id/address1"
        android:id="@+id/city1"
        app:layout_widthPercent="50%"
        android:textSize="18dp"
        android:hint="city"
        android:inputType="text"
        android:gravity="center"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="3%"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/pincode"
        android:text="Pincode:"
        android:textSize="20dp"
        android:layout_below="@+id/city"
        app:layout_widthPercent="30%"
        app:layout_marginTopPercent="8%"
        app:layout_marginLeftPercent="3%"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pincode"
        android:layout_below="@+id/city1"
        android:id="@+id/pincode1"
        app:layout_widthPercent="50%"
        android:textSize="18dp"
        android:hint="pin"
        android:inputType="number"
        android:gravity="center"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="3%"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="7%"
        android:layout_below="@+id/pincode"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="#008B8B"
        android:id="@+id/submit"
        android:textSize="18dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="50%"
        />




</android.support.percent.PercentRelativeLayout>
